<h1>Editing goal</h1>

<% form_for(@goal) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :nutrient_id %><br />
    <%= f.text_field :nutrient_id %>
  </p>
 <p>
    <%= f.label :amount %><br />
