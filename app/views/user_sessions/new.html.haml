%h3 Login

= link_to((image_tag 'twitter-auth.png'), twitter_login_url)

- form_for @user_session, :url => user_session_path do |f| 
  = f.error_messages 
  = f.label :login, nil, :class => 'inline'
  = f.text_field :login, :class => 'text'
  %br/
  %br/
  = f.label :password, nil, :class => 'inline'
  = f.password_field :password, :class => 'text'
  %br/
  %br/
  = f.label :remember_me, nil, :class => 'inline', :style => 'top:0'
  = f.check_box :remember_me 
  %br/
  %br/
  = f.submit "Login"


