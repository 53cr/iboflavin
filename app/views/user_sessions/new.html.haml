.login_box
  - form_for :user_session, :url => user_session_path do |form| 
    .text_field
      = form.label :email, 'Email'
      = form.text_field :email, :class => "text"
    .text_field
      = form.label :password
      = form.password_field :password, :class => "text"
    .text_field
      = form.label :remember_me 
      = form.check_box :remember_me 
    .submit_field
      = form.submit 'Login', :disable_with => 'Please wait...' 

  =link_to "Forgot My Password", new_password_url

