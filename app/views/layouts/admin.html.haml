!!!
%html{ :lang => "en" }
  %head
    %meta{ :content => "text/html charset=utf-8", "http-equiv" => "Content-Type" }
    %title= APP[:name]
    = stylesheet_link_tag 'compiled/screen.css', 'jquery.wysiwyg.css', :media => 'screen, projection'
    = stylesheet_link_tag 'compiled/print.css', :media => 'print'
    /[if IE]
      = stylesheet_link_tag 'compiled/ie.css', :media => 'screen, projection'
    = javascript_include_tag 'jquery-1.3.2.min','jquery.wysiwyg', 'application'
  %body
    #header
      .content
        .container
          = render '/shared/header'
    #body
      .content{ :style => 'height:100%;'}
        .container
          - flash.each do |key, value|
            %div{:class => key}= h(value)
          #sidebar
            = yield :sidebar
            = render '/shared/sidebar'
          #main
            #content-header= render '/admin/menu' 
            #content= yield
